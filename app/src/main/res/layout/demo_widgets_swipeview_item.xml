<?xml version="1.0" encoding="utf-8"?>
<com.xuan.bigappleui.lib.widget.swipeview.SwipeLayout
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:minHeight="120dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 侧滑后出来的界面 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/behind1"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:minHeight="120dp"
            android:background="@color/tab_btn_text_normal"
            android:gravity="center"
            android:text="移动至"/>
        <TextView
            android:id="@+id/behind2"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:minHeight="120dp"
            android:background="@color/tab_btn_text_sel"
            android:gravity="center"
            android:text="删除"/>
    </LinearLayout>

    <!-- 主界面布局 -->
    <RelativeLayout
        android:id="@+id/above"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView 
            android:id="@+id/aboveTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我是正的界面"/>
    </RelativeLayout>
</com.xuan.bigappleui.lib.widget.swipeview.SwipeLayout>